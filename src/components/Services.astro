---
import Icon from './Icon.astro';

const services = [
  {
    icon: 'Globe',
    title: 'Desarrollo Web Frontend',
    description:
      'Interfaces modernas y responsivas con React, Next.js, Astro y las últimas tecnologías.',
    features: [
      'React & Next.js',
      'TypeScript',
      'Tailwind CSS',
      'Responsive Design',
    ],
    color: 'blue',
  },
  {
    icon: 'Server',
    title: 'Desarrollo Backend & APIs',
    description:
      'APIs robustas y escalables con Node.js, Python, y bases de datos optimizadas.',
    features: [
      'Node.js & Express',
      'Python & FastAPI',
      'PostgreSQL & MongoDB',
      'Microservicios',
    ],
    color: 'purple',
  },
  {
    icon: 'Smartphone',
    title: 'Aplicaciones Móviles',
    description:
      'Apps nativas e híbridas para iOS y Android con React Native y Flutter.',
    features: [
      'React Native',
      'Flutter',
      'iOS & Android',
      'Push Notifications',
    ],
    color: 'green',
  },
  {
    icon: 'Cloud',
    title: 'DevOps & Cloud',
    description:
      'Infraestructura en la nube, CI/CD, y despliegues automatizados.',
    features: [
      'AWS & Azure',
      'Docker & Kubernetes',
      'CI/CD Pipelines',
      'Monitoreo',
    ],
    color: 'orange',
  },
  {
    icon: 'Zap',
    title: 'Optimización Performance',
    description:
      'Mejoramos la velocidad y rendimiento de aplicaciones existentes.',
    features: ['Core Web Vitals', 'SEO Técnico', 'Code Splitting', 'Caching'],
    color: 'red',
  },
  {
    icon: 'Headphones',
    title: 'Soporte & Mantenimiento',
    description:
      'Soporte técnico 24/7 y mantenimiento continuo de tus aplicaciones.',
    features: ['Soporte 24/7', 'Actualizaciones', 'Monitoreo', 'Backup'],
    color: 'indigo',
  },
];

const colorClasses = {
  blue: {
    bg: 'bg-gradient-to-br from-blue-50 to-cyan-50',
    icon: 'text-blue-600',
    border: 'hover:border-blue-200 hover:shadow-blue-100/50',
    gradient: 'from-blue-500 via-blue-600 to-cyan-600',
    cardBg: 'hover:bg-gradient-to-br hover:from-blue-50/80 hover:to-cyan-50/80',
  },
  purple: {
    bg: 'bg-gradient-to-br from-purple-50 to-violet-50',
    icon: 'text-purple-600',
    border: 'hover:border-purple-200 hover:shadow-purple-100/50',
    gradient: 'from-purple-500 via-purple-600 to-violet-600',
    cardBg:
      'hover:bg-gradient-to-br hover:from-purple-50/80 hover:to-violet-50/80',
  },
  green: {
    bg: 'bg-gradient-to-br from-green-50 to-emerald-50',
    icon: 'text-green-600',
    border: 'hover:border-green-200 hover:shadow-green-100/50',
    gradient: 'from-green-500 via-green-600 to-emerald-600',
    cardBg:
      'hover:bg-gradient-to-br hover:from-green-50/80 hover:to-emerald-50/80',
  },
  orange: {
    bg: 'bg-gradient-to-br from-orange-50 to-amber-50',
    icon: 'text-orange-600',
    border: 'hover:border-orange-200 hover:shadow-orange-100/50',
    gradient: 'from-orange-500 via-orange-600 to-amber-600',
    cardBg:
      'hover:bg-gradient-to-br hover:from-orange-50/80 hover:to-amber-50/80',
  },
  red: {
    bg: 'bg-gradient-to-br from-red-50 to-rose-50',
    icon: 'text-red-600',
    border: 'hover:border-red-200 hover:shadow-red-100/50',
    gradient: 'from-red-500 via-red-600 to-rose-600',
    cardBg: 'hover:bg-gradient-to-br hover:from-red-50/80 hover:to-rose-50/80',
  },
  indigo: {
    bg: 'bg-gradient-to-br from-indigo-50 to-blue-50',
    icon: 'text-indigo-600',
    border: 'hover:border-indigo-200 hover:shadow-indigo-100/50',
    gradient: 'from-indigo-500 via-indigo-600 to-blue-600',
    cardBg:
      'hover:bg-gradient-to-br hover:from-indigo-50/80 hover:to-blue-50/80',
  },
};
---

<section id="servicios" class="py-24 lg:py-32 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 leading-[1.15] md:leading-[1.1] tracking-tight mb-8">
        Servicios que
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          potencian
        </span>
        tu negocio
      </h2>
      <p class="text-xl md:text-2xl text-gray-600 leading-[1.7] mb-12">
        Ofrecemos soluciones completas de desarrollo web y mobile, desde la conceptualización 
        hasta el despliegue y mantenimiento.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => {
        const colors = colorClasses[service.color as keyof typeof colorClasses];
        return (
          <div class={`group relative bg-white rounded-2xl p-8 shadow-sm border border-gray-200 ${colors.border} hover:shadow-xl transition-all duration-300 hover:-translate-y-2`}>
            <!-- Icon -->
            <div class={`inline-flex items-center justify-center w-16 h-16 rounded-xl ${colors.bg} mb-6 group-hover:scale-110 transition-transform duration-300`}>
              <Icon name={service.icon} class={`h-8 w-8 ${colors.icon}`} />
            </div>

            <!-- Content -->
            <h3 class="text-xl font-bold text-gray-900 mb-4">
              {service.title}
            </h3>
            
            <p class="text-gray-600 mb-6 leading-relaxed">
              {service.description}
            </p>

            <!-- Features -->
            <ul class="space-y-2 mb-8">
              {service.features.map((feature) => (
                <li class="flex items-center text-sm text-gray-600">
                  <Icon name="Check" class="h-4 w-4 text-green-500 mr-3 flex-shrink-0" />
                  {feature}
                </li>
              ))}
            </ul>

            <!-- CTA -->
            <div class="mt-auto">
              <button class={`w-full bg-gradient-to-r ${colors.gradient} text-white font-semibold py-3 px-6 rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500`}>
                Más Información
                <Icon name="ArrowRight" class="inline-block ml-2 h-4 w-4" />
              </button>
            </div>

            <!-- Unique decorative elements -->
            {index === 0 && (
              <div class="absolute top-4 right-4 opacity-20 animate-pulse">
                <div class="w-20 h-20 bg-gradient-to-br from-blue-200 to-cyan-200 rounded-full blur-sm"></div>
                <Icon name={service.icon} class="absolute top-2 right-2 h-12 w-12 text-blue-500" />
              </div>
            )}
            {index === 1 && (
              <div class="absolute top-4 right-4 opacity-20 animate-bounce">
                <div class="w-20 h-20 bg-gradient-to-br from-purple-200 to-violet-200 rounded-full blur-sm"></div>
                <Icon name={service.icon} class="absolute top-2 right-2 h-12 w-12 text-purple-500" />
              </div>
            )}
            {index === 2 && (
              <div class="absolute top-4 right-4 opacity-20 animate-spin">
                <div class="w-20 h-20 bg-gradient-to-br from-green-200 to-emerald-200 rounded-full blur-sm"></div>
                <Icon name={service.icon} class="absolute top-2 right-2 h-12 w-12 text-green-500" />
              </div>
            )}
            {index === 3 && (
              <div class="absolute top-4 right-4 opacity-20 animate-pulse">
                <div class="w-20 h-20 bg-gradient-to-br from-orange-200 to-amber-200 rounded-full blur-sm"></div>
                <Icon name={service.icon} class="absolute top-2 right-2 h-12 w-12 text-orange-500" />
              </div>
            )}
            {index === 4 && (
              <div class="absolute top-4 right-4 opacity-20 animate-bounce">
                <div class="w-20 h-20 bg-gradient-to-br from-red-200 to-rose-200 rounded-full blur-sm"></div>
                <Icon name={service.icon} class="absolute top-2 right-2 h-12 w-12 text-red-500" />
              </div>
            )}
            {index === 5 && (
              <div class="absolute top-4 right-4 opacity-20 animate-spin">
                <div class="w-20 h-20 bg-gradient-to-br from-indigo-200 to-blue-200 rounded-full blur-sm"></div>
                <Icon name={service.icon} class="absolute top-2 right-2 h-12 w-12 text-indigo-500" />
              </div>
            )}
          </div>
        );
      })}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-200 max-w-2xl mx-auto">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          ¿No encuentras lo que buscas?
        </h3>
        <p class="text-gray-600 mb-6">
          Creamos soluciones personalizadas para cada cliente. Cuéntanos tu proyecto 
          y encontraremos la mejor manera de ayudarte.
        </p>
        <a href="#contacto" 
           class="inline-flex items-center px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-200">
          Consulta Personalizada
          <Icon name="MessageCircle" class="ml-2 h-5 w-5" />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Service cards animation on scroll */
  .group {
    animation: fadeInUp 0.6s ease-out;
    animation-fill-mode: both;
  }

  .group:nth-child(1) { animation-delay: 0.1s; }
  .group:nth-child(2) { animation-delay: 0.2s; }
  .group:nth-child(3) { animation-delay: 0.3s; }
  .group:nth-child(4) { animation-delay: 0.4s; }
  .group:nth-child(5) { animation-delay: 0.5s; }
  .group:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>